<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/login_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/white_rectangle"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_centerVertical="true"
        >

        <EditText
            android:id="@+id/login_tvEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:textSize="20sp"
            android:padding="10dp"
            android:drawablePadding="5dp"
            android:background="@drawable/white_rounded"
            android:layout_marginTop="30dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:drawableLeft="@drawable/ic_person_black_24dp"/>

        <EditText
            android:id="@+id/login_tvPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:textSize="20sp"
            android:padding="10dp"
            android:drawablePadding="5dp"
            android:background="@drawable/white_rounded"
            android:layout_marginTop="10dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:drawableLeft="@drawable/ic_password_black_24dp"
            android:inputType="textPassword"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            >

            <Button
                android:id="@+id/login_btLogin"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:text="登入"
                android:textSize="20sp"
                android:textStyle="bold"
                android:background="@drawable/login_round_button"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                tools:ignore="OnClick" />

            <Button
                android:id="@+id/login_btRegister"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:text="註冊"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/login_register_button"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="FB登入"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:layout_marginBottom="30dp"
                android:background="@drawable/login_fb_button"/>

        </LinearLayout>

        <Button
            android:id="@+id/login_look"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="立即查看"
            android:background="@color/login_bg"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:padding="5dp"
            android:onClick="lookOnClick"
            />

    </LinearLayout>




</RelativeLayout>
